{
  "name": "kicktipp-bot",
  "description": "A simple but effective kicktipp bot using different strategies for tipping.",
  "author": "Andreas Schmid <service@aaschmid.de>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aaschmid/kicktipp-bot"
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "test": "run-s test:lint license:check test:unit test:build",
    "license:check": "license-checker-rseidelsohn --production --summary --unknown --onlyAllow \"Apache-2.0;BSD-2-Clause;MIT\"",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:lint:fix": "eslint --fix .",
    "test:unit": "vitest run --typecheck",
    "test:ui": "vitest  --typecheck --ui",
    "test:watch": "vitest --typecheck"
  },
  "dependencies": {
    "@playwright/browser-chromium": "^1.58.2",
    "@types/node": "^25.2.3",
    "dotenv": "^17.2.4",
    "playwright": "^1.58.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-istanbul": "^4.0.18",
    "eslint": "^9.39.2",
    "license-checker-rseidelsohn": "^4.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "printWidth": 140,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
