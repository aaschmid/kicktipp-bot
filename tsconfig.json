{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es2020",
        "lib": ["dom", "esnext"],
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "declaration": false,
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "newLine": "lf",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "typeRoots": ["node_modules/@types", "src/typeDeclarations"]
    },
    "include": ["src"]
}
